<Page
    x:Class="SduPackage.Views.BusSetting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SduPackage.Views"
    xmlns:uc="using:SduPackage.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Light">
    
    <Page.Resources>
        <Flyout x:Key="NotificationFlyout">
            <Grid>
                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="NotificationText"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="现在下载"/>
                        <Button Grid.Column="1" Content="稍后下载"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Flyout>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <uc:NotificationBar x:Name="NotifitionBar" Grid.ColumnSpan="99" Canvas.ZIndex="99"/>
        <Grid Grid.Row="0" Background="{ThemeResource ButtonPressedBackgroundThemeBrush}">
            <TextBlock Text="设置" Foreground="White" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0"/>
        </Grid>
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="数据库版本：" FontSize="14"/>
                    <TextBlock x:Name="BudDBTextBlock" Text="无" FontSize="14"/>
                </StackPanel>
                <ToggleSwitch Grid.Row="1" Header="开启数据库自动更新"/>
            </Grid>
            <Button Grid.Row="2" Height="60" Width="auto" BorderThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,40" Content="查找可用更新" FontSize="15" Click="CheckSQLUpdate" Background="{ThemeResource ButtonPressedBackgroundThemeBrush}" Foreground="{ThemeResource ButtonPressedForegroundThemeBrush}"/>
        </Grid>
    </Grid>
</Page>
